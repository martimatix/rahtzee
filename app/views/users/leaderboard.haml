%h1 Leaderboard

%table.table.table-hover
  <col width="10%">
  <col width="10%">
  <col width="60%">
  <col width="10%">
  <col width="10%">
  %tr
    %th Ranking
    %th
    %th Name
    %th Score
    %th Date
  - @leaders.each_with_index do |game, i|
    %tr
      %td
        = i + 1
      %td
        = image_tag game.user.gravatar_url(:size => 64, :default => 'retro')
      %td
        = link_to game.user.name, game.user
      %td
        = game.total_score
      %td
        = game.created_at.strftime("%e/%b/%Y")
